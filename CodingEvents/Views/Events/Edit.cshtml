
@{
    ViewData["Title"] = "Edit";
}

@model AddEventViewModel

<h1>Edit Event</h1>




<form asp-controller="Events" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Event Type</label>
        <select asp-for="CategoryId" asp-items="Model.Categories"></select>
    </div>
    <input class="btn btn-danger" type="submit" value="Edit Event" />
</form>


<p>
    <a asp-controller="Events" class="btn btn-success mt-2" asp-action="Index">Go Back</a>
</p>



