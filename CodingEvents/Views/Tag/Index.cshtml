@model IEnumerable<CodingEvents.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<h1>All Event Tags</h1>

@if (Model.Count() == 0)
{
    <p>No tags yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Tag Name</th>
        </tr>
        @foreach (Tag tag in Model)
        {
    <tr>
        <td>@tag.Id</td>
        <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></td>
    </tr>
        }
    </table>
}